# Django Configuration - Docker
SECRET_KEY=django-insecure-docker-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=backend,localhost,127.0.0.1,0.0.0.0
DJANGO_SETTINGS_MODULE=config.settings.development

# Database Configuration - Docker Services
DB_NAME=lateral360
DB_USER=postgres
DB_PASSWORD=postgres123
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgresql://postgres:postgres123@db:5432/lateral360

# Redis Configuration - Docker Services
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET_KEY=jwt-secret-key-for-docker-development
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=7

# CORS Configuration - Docker Frontend
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://frontend:3000
CORS_ALLOW_CREDENTIALS=True

# Media and Static Files - Docker
MEDIA_URL=/media/
STATIC_URL=/static/
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,jpg,jpeg,png,xlsx,xls

# Email Configuration - Docker Development
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@lateral360.docker

# Security Settings - Docker Development
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Cache Configuration - Docker Redis
CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
CACHE_LOCATION=redis://redis:6379/1

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=/app/logs/lateral360_docker.log

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000/hour

# Environment
ENVIRONMENT=docker-development
