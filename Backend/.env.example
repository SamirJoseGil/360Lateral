# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================
SECRET_KEY=django-insecure-change-this-to-a-very-long-random-string-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=lateral360
DB_USER=postgres
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# JWT SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-different-from-django-secret
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=1440

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/1
REDIS_PASSWORD=your-redis-password-if-any

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com
CSRF_TRUSTED_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_ENABLED=True

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MEDIA_URL=/media/
STATIC_URL=/static/

# =============================================================================
# SECURITY HEADERS
# =============================================================================
# These are automatically configured in settings.py
# No additional environment variables needed for basic security headers

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Login attempts per IP in 15 minutes
LOGIN_RATE_LIMIT_IP=5
# Login attempts per email in 15 minutes  
LOGIN_RATE_LIMIT_EMAIL=5
# Registration attempts per IP per hour
REGISTRATION_RATE_LIMIT=3

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Logs are automatically configured
# Files will be created in Backend/logs/ directory

# =============================================================================
# MAPGIS INTEGRATION (if applicable)
# =============================================================================
MAPGIS_API_URL=https://mapgis-url.com/api
MAPGIS_USERNAME=your-mapgis-username
MAPGIS_PASSWORD=your-mapgis-password

