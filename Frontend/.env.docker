# API Configuration - Docker
VITE_API_URL=http://localhost:8000/api
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1

# Authentication
VITE_JWT_SECRET=jwt-secret-key-for-docker-development
VITE_TOKEN_EXPIRY=3600

# App Configuration
VITE_APP_NAME="Lateral 360°"
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=docker-development
VITE_APP_TITLE="Lateral 360° - Gestión de Lotes"

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.jpg,.jpeg,.png,.xlsx,.xls

# Features Flags - Docker Development
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_DEBUG=true

# External Services
VITE_GOOGLE_MAPS_API_KEY=
VITE_SENTRY_DSN=

# Development Settings
VITE_DEBUG=true
VITE_LOG_LEVEL=debug
VITE_HOT_RELOAD=false

# Backend Endpoints - Docker Internal
VITE_AUTH_ENDPOINT=/auth
VITE_HEALTH_ENDPOINT=/health
VITE_DOCS_ENDPOINT=/swagger

# Environment
NODE_ENV=development
